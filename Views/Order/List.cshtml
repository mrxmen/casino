
@model IEnumerable<TblOrders>
<!-- ***** Special Area Start ***** -->
<section class="special-area bg-white section_padding_100" id="about">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Section Heading Area -->
                <div class="section-heading text-center" style="margin-top:20px;">
                    <h2>Order List</h2>
                    <div class="line-shape"></div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Single Special Area -->
            <div class="col-12">


                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered table-striped">
                        <tr><th>Name</th><th>Address</th><th colspan="2">Details</th><th></th></tr>
                        @foreach (TblOrders o in Model)
                        {
                            <tr>
                                <td>@o.Name</td>
                                <td>@o.Line1</td>
                                <th>Product</th>
                                <th>Quantity</th>
                                <td>
                                    <form asp-action="MarkShipped" method="post">
                                        <input type="hidden" name="orderId" value="@o.OrderID" />
                                        <button type="submit" class="btn btn-sm btn-danger">Ship</button>
                                    </form>
                                </td>
                            </tr>
                             @foreach (CartLine line in o.Lines)
                             {
                                <tr>
                                    <td colspan="2"></td>
                                    <td>@line.Product.Name</td>
                                    <td>@line.Quality</td>
                                    <td></td>
                                </tr>
                              }
                        }
                    </table>
                 }
                 else
                 {
                    <div class="text-center">No Unshipped Orders</div>
                 }

            </div>
        </div>
    </div>
</section>
<!-- ***** Special Area End ***** -->



