@model TblOrders

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title -->
    <title>BaoTien | Order_@Model.OrderID</title>

    <!-- Favicon -->
    <link rel="icon" href="/colorlib/img/core-img/favicon.ico">

    <!-- Core Stylesheet -->
    <link href="/colorlib/style.css" rel="stylesheet">

    <!-- Responsive CSS -->
    <link href="/colorlib/css/responsive.css" rel="stylesheet">
</head>
<body onload="window.print();">
    <div class="wrapper">
        <!-- Main content -->
        <section style="width:96%; margin:10px auto 0;">
            <!-- title row -->
            <div class="row">
                <div class="col-12">
                    <h2 class="page-header">
                        <i class="fa fa-globe"></i> BaoTien Software, Inc.&nbsp;
                        <span class="pull-right">Date: @Model.CreatedDate.ToString("dd/MM/yyyy")</span>
                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    From
                    <address>
                        <strong>BaoTien Software, Inc.</strong><br>
                        406-B1 Building<br>
                        Mai Dịch, Cầu Giấy<br>
                        Phone: (+84) 09.18.07.1987<br>
                        Email: info@CasinoDaiMacGB.com
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    To
                    <address>
                        <strong>@Model.Name</strong><br>
                        @Model.Line1<br>
                        @Model.City, @Model.Country<br>
                        Phone: @Model.PhoneNumber<br>
                        Email: @Model.Email
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <b>Order ID:</b> @Model.OrderID<br><br>
                    <b>Payment Method:</b> @Model.PaymentMethod<br>
                    <b>Payment Due:</b> @Model.PaymentDate.ToString("dd/MM/yyyy")<br>
                    <b>Account:</b> @Model.AccountName
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-xs-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Qty</th>
                                <th>Product</th>
                                <th>Serial #</th>
                                <th>Description</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (CartLine cartItem in Model.Lines)
                            {
                                <tr>
                                    <td>@cartItem.Quality</td>
                                    <td>@cartItem.Product.Name</td>
                                    <td>@cartItem.Product.ProductID</td>
                                    <td>@cartItem.Product.Description</td>
                                    <td>@((cartItem.Quality * cartItem.Product.Price).ToString("c"))</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <div class="row">
                <!-- accepted payments column -->
                <div class="col-md-9 col-xs-6">
                    <p class="lead">Payment Methods:</p>
                    <img src="/AdminLTE/dist/img/credit/visa.png" alt="Visa">
                    <img src="/AdminLTE/dist/img/credit/mastercard.png" alt="Mastercard">
                    <img src="/AdminLTE/dist/img/credit/american-express.png" alt="American Express">
                    <img src="/AdminLTE/dist/img/credit/paypal2.png" alt="Paypal">
                    <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                        Please select a method for payment. Please select a method for payment. Please select a method for payment.
                    </p>
                </div>
                <!-- /.col -->
                <div class="col-md-3 col-xs-6">
                    <p class="lead">Amount Due @Model.PaymentDate.ToString("dd/MM/yyyy")</p>
                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th style="width:50%">Subtotal:</th>
                                <td>@Model.SubTotal.ToString("c")</td>
                            </tr>
                            <tr>
                                <th>Tax (@Model.Tax%)</th>
                                <td>@((Model.Tax * Model.SubTotal / 100).ToString("c"))</td>
                            </tr>
                            <tr>
                                <th>Shipping Fee:</th>
                                <td>@Model.ShippingFee.ToString("c")</td>
                            </tr>
                            <tr>
                                <th>Total:</th>
                                <td>@Model.Total.ToString("c")</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
    <!-- Jquery-2.2.4 JS -->
    <script src="/colorlib/js/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="/colorlib/js/popper.min.js"></script>
    <!-- Bootstrap-4 Beta JS -->
    <script src="/colorlib/js/bootstrap.min.js"></script>
    <!-- All Plugins JS -->
    <script src="/colorlib/js/plugins.js"></script>
    <!-- Slick Slider Js-->
    <script src="/colorlib/js/slick.min.js"></script>
    <!-- Footer Reveal JS -->
    <script src="/colorlib/js/footer-reveal.min.js"></script>
    <!-- Active JS -->
    <script src="/colorlib/js/active.js"></script>
    <!-- Validate Client Side -->
</body>
</html>
