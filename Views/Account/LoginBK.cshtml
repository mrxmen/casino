@model LoginViewModel
@using PaulMiami.AspNetCore.Mvc.Recaptcha

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>[Tài Xỉu BnS] Đăng nhập</title>
    <style>
        .input-validation-error {
            border-color: red !important;
            background-color: #fee !important;
        }

        #Password-error {
            color: red !important;
        }

        .text-danger {
            color: red !important;
        }

        .btn-google-plus:hover {
            color: #ce1e1e !important;
        }

        .btn-facebook:hover {
            color: #3b5998 !important;
        }

        .btn-twitter:hover {
            color: #00aced !important;
        }

        .form-control {
            /*box-shadow:none !important;*/
        }

        .social-custom {
            margin: 8px 0 !important;
        }

        body {
            background: url('/User/img/back_login.jpg') #4c11be no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }
    </style>
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="/AdminLTE/bowers/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/AdminLTE/bowers/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="/AdminLTE/bowers/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/AdminLTE/dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="/AdminLTE/plugins/iCheck/square/blue.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default" style="margin-top:20%;">
                    <!-- Login Logo -->
                    <div class="panel-heading" style="background-color:#804ee0 !important;">
                        <span style="text-decoration:none !important; color:#278200 !important; font-size:24px !important;">
                            <img src="/img/small_logo.png" style="width:72px;" /> <span style="color:#fff !important;">Tài Xỉu BnS</span>
                        </span>
                    </div>
                    <!-- Login Logo /-->
                    <div class="login-box-body">
                        @if (TempData["message"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible" style="width:99%; margin:0 auto;">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <h4><i class="icon fa fa-cl"></i> Lỗi đăng nhập!</h4>
                                @TempData["message"]
                            </div>
                        }
                        <form asp-action="Login" asp-controller="Account" method="post">
                            <input type="hidden" asp-for="ReturnUrl" />
                            <input type="hidden" asp-for="RememberMe" />
                            <fieldset>
                                <div class="form-group has-feedback">
                                    <div><span asp-validation-for="Name" class="text-danger"></span></div>
                                    <input asp-for="Name" class="form-control" placeholder="Username" autofocus>
                                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                                </div>
                                <div class="form-group has-feedback">
                                    <div><span asp-validation-for="Password"></span></div>
                                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" value="">
                                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                                </div>
                                <div class="form-group">
                                    <recaptcha />
                                </div>
                                <div class="form-group">
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                                    </div>
                                    <!-- /.col -->
                                </div>
                            </fieldset>
                        </form>
                        <div class="social-auth-links text-center">
                            <p> Hoặc đăng nhập bằng </p>
                            <a class="btn btn-google social-custom" asp-action="GoogleLogin" asp-route-returnUrl="@ViewBag.returnUrl">
                                <i class="fa fa-google"></i> Gmail
                            </a>
                            <a class="btn btn-facebook social-custom" asp-action="FacebookLogin" asp-route-returnUrl="@ViewBag.returnUrl">
                                <i class="fa fa-facebook"></i> Facebook
                            </a>
                            <a class="btn btn-microsoft social-custom" asp-action="MicrosoftLogin" asp-route-returnUrl="@ViewBag.returnUrl">
                                <i class="fa fa-windows"></i> Microsoft
                            </a>
                        </div>
                        <div style="line-height:30px;">
                            <!-- /.social-auth-links -->
                            <a asp-action="Forgot" asp-controller="Account">I forgot my password</a><br>
                            <a asp-action="Register" asp-controller="Account" class="text-center">Register a new membership</a>
                        </div>
                    </div>
                    <!-- /.login-box-body -->
                </div>
            </div>
        </div>
    </div>

    <div class="copyright text-center">
        <p style="color:#fff !important; font-weight:400; font-size:18px !important;">Design by <a href="https://casinodaimac.com" style="color:#ffd800 !important; text-decoration:none !important;">CasinoDaiMac.Com</a></p>
    </div>
    <!-- jQuery 3 -->
    <script src="/AdminLTE/bowers/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="/AdminLTE/bowers/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="/AdminLTE/plugins/iCheck/icheck.min.js"></script>
    <!-- Validate Client Side -->
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <recaptcha-script jquery-validation="false" />
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>

