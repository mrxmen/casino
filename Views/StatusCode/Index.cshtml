@model int

@{ 
    Layout = null;
}

@{ 
    var statusCode = Model;
    var statusMessage = "";
    switch (statusCode)
    {
        case 400:
            statusMessage = "Yêu cầu không thể thực hiện được do cú pháp không tốt.";
            break;
        case 403:
            statusMessage = "Bạn không có quyền truy cập vào mục này.";
            break;
        case 404:
            statusMessage = "Không tìm thấy trang mà bạn đang tìm kiếm.";
            break;
        case 408:
            statusMessage = "Hết thời gian yêu cầu";
            break;
        case 500:
            statusMessage = "Máy chủ không thể hoàn tất yêu cầu này.";
            break;
        default:
            statusMessage = "Ồ, điều mà chúng ta không mong đợi đã xảy ra.";
            break;
    }
}


