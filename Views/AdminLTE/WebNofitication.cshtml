@model List<TblSettings>

@{
    Layout = "_AdminLayoutLTE";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Thông báo từ Website
        <small>cho phép viết thông báo tới thành viên</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active">Thông Báo Website</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-lg-8 col-xs-12">
            @if (TempData["message"] != null)
            {
                if (TempData["type"].ToString().Equals("OK"))
                {
                    <div class="alert alert-success alert-dismissible" style="width:99%; margin:0 auto;">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-check"></i> Thao tác thành công!</h4>
                        @TempData["message"]
                    </div>
                }
                else if (TempData["type"].ToString().Equals("NG"))
                {
                    <div class="alert alert-danger alert-dismissible" style="width:99%; margin:0 auto;">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-warning"></i> Thao tác không thành công!</h4>
                        @TempData["message"]
                    </div>
                }
            }
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 col-xs-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">THÔNG BÁO - TRANG CHỦ</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form asp-action="WebNofitication" asp-controller="AdminLTE" enctype="multipart/form-data" method="post">
                        <div class="form-group">
                            <label>Nội dung thông báo</label>
                            <textarea id="notification" name="notification" class="textarea" placeholder="Nhập nội dung"
                                      style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">
                                @Model[0].SettingContent
                            </textarea>
                        </div>

                        <div class="form-group">
                            <button type="submit" id="btnSaveNotifyIndex"
                                    class="btn btn-lg btn-success">
                                <i class="glyphicon glyphicon-save"></i> Lưu Thông Báo
                            </button>
                        </div>
                    </form>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>


    <div class="row">
        <div class="col-lg-8 col-xs-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">THÔNG BÁO - CHI TIẾT ROLLING</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form asp-action="WebNofiticationRD" asp-controller="AdminLTE" enctype="multipart/form-data" method="post">
                        <div class="form-group">
                            <label>Nội dung thông báo</label>
                            <input id="notificationRD" name="notificationRD" value="@Model[1].SettingContent" class="form-control" placeholder="Nhập nội dung" />
                        </div>

                        <div class="form-group">
                            <button type="submit" id="btnSaveNotifyRD"
                                    class="btn btn-lg btn-success">
                                <i class="glyphicon glyphicon-save"></i> Lưu Thông Báo
                            </button>
                        </div>
                    </form>

                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
</section>
<!-- /.content -->