@model IEnumerable<ServerGoldViewModel>

@{
    Layout = "_AdminLayoutLTE";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Server Gold
        <small>cho phép xem số Gold tại mỗi server</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="#">Quản Lý Tài Khoản</a></li>
        <li class="active">Server Gold</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                @if (TempData["message"] != null)
                {
                    if (TempData["type"].ToString().Equals("OK"))
                    {
                        <div class="alert alert-success alert-dismissible" style="width:99%; margin:0 auto;">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h4><i class="icon fa fa-check"></i> Thao tác thành công!</h4>
                            @TempData["message"]
                        </div>
                    }
                    else if (TempData["type"].ToString().Equals("NG"))
                    {
                        <div class="alert alert-danger alert-dismissible" style="width:99%; margin:0 auto;">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h4><i class="icon fa fa-warning"></i> Thao tác không thành công!</h4>
                            @TempData["message"]
                        </div>
                    }
                }
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="tblListOfServerGolds" class="table table-bordered table-striped dataTable">
                        <thead>
                            <tr>
                                <th style="width:20px;">#</th>
                                <th>Server</th>
                                <th>Tổng Nạp</th>
                                <th>Tổng Rút</th>
                                <th>Tổng Giữ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() == 0)
                            {
                                <tr><td colspan="5">Không có server nào</td></tr>
                            }
                            else
                            {
                                int i = 1;
                                foreach (ServerGoldViewModel sv in Model)
                                {
                                    <tr>
                                        <td>@i.ToString()</td>
                                        <td>@sv.GameServers.ServerName</td>
                                        <td>@sv.Total_Import.ToString("n0")</td>
                                        <td>@sv.Total_Export.ToString("n0")</td>
                                        <td>@sv.Total_Hold.ToString("n0")</td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
</section>
<!-- /.content -->