@model AspNetRolesExtend

@{
    Layout = "_AdminLayoutLTE";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Mở rộng nhóm
        <small>cho phép bổ sung thông tin nhóm</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="#">Quản Lý Nhóm</a></li>
        <li class="active">Mở rộng nhóm</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- Form Element sizes -->
            <!-- Input addon -->
            <div class="box box-info">
                @*<div class="box-header with-border">
                    <h3 class="box-title">Please fill out the form below</h3>
                </div>*@
                <div class="box-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form asp-action="RoleExtend" asp-controller="AdminLTE" enctype="multipart/form-data" method="post" class="form-horizontal">
                        <div class="form-group">
                            <label asp-for="RoleName" class="col-sm-2 control-label">Tên nhóm</label>
                            <div class="col-sm-10">
                                <input asp-for="RoleId" class="form-control" type="hidden" /><br />
                                <input asp-for="RoleName" class="form-control" type="text" disabled />
                            </div>
                        </div>
                        <div class="form-group">
                            <span style="color:#ff0000; font-style:italic;"> * Phần trăm người chơi trả cho trung gian</span>
                            <label asp-for="PercentReturn" class="col-sm-2 control-label">Phần trăm</label>
                            <div class="col-sm-10">
                                <input asp-for="PercentReturn" type="number" class="form-control" placeholder="Phần trăm" />
                            </div>
                        </div>
                        <div class="form-group">
                            <span style="color:#ff0000; font-style:italic;"> * Giới hạn THUA thấp nhất để được reset</span>
                            <label asp-for="LimitForReset" class="col-sm-2 control-label">Giới hạn</label>
                            <div class="col-sm-10">
                                <input asp-for="LimitForReset" type="number" class="form-control" placeholder="Giới hạn" />
                            </div>
                        </div>
                        <div class="form-group">
                            <span style="color:#ff0000; font-style:italic;"> * Giới hạn số lượng thành viên</span>
                            <label asp-for="LimitMembers" class="col-sm-2 control-label">Số thành viên</label>
                            <div class="col-sm-10">
                                <input asp-for="LimitMembers" type="number" class="form-control" placeholder="Số thành viên" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleImg" class="col-sm-2 control-label">Avatar</label>
                            <div class="col-sm-10">
                                <img class="img-responsive" src="@Model.RoleImg" width="48" />
                                <input type="file" name="file">
                                <input type="hidden" asp-for="RoleImg" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10 col-sm-offset-2">
                                <label>
                                    <input asp-for="IsUsed" type="checkbox"> Sử dụng
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Orders" class="col-sm-2 control-label">Thứ tự</label>
                            <div class="col-sm-10">
                                <input asp-for="Orders" type="number" class="form-control" placeholder="Thứ tự" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Remark" class="col-sm-2 control-label">Ghi chú</label>
                            <div class="col-sm-10">
                                <input asp-for="Remark" type="text" class="form-control" placeholder="Ghi chú" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-danger">Cập nhật</button>
                                <a asp-action="RolesManager" asp-controller="AdminLTE" class="btn btn-default">Danh sách</a>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
