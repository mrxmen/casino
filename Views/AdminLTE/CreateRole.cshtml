
@model CreateRoleModel
@{
    Layout = "_AdminLayoutLTE";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Create Role
        <small>allow to create a new role</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Role Management</a></li>
        <li class="active">Create Role</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- Form Element sizes -->
            <!-- Input addon -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Please fill out the form below</h3>
                </div>
                <div class="box-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form asp-action="CreateRole" asp-controller="AdminLTE" method="post">
                        <div class="input-group">
                            <span class="input-group-addon" style="color:#0094ff;">@@</span>
                            <input asp-for="Name" class="form-control" placeholder="Rolename" />
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-info pull-right">Create</button>
                            <a asp-action="RolesManager" asp-controller="AdminLTE" class="btn btn-default">Cancel</a>
                        </div>
                        <!-- /input-group -->
                    </form>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
