@model AppUser
@{
    Layout = "_AdminLayoutLTE";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Cập nhật tài khoản
        <small>cho phép cập nhật thông tin tài khoản</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="#">Quản Lý Người Dùng</a></li>
        <li class="active">Cập nhật tài khoản</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- Form Element sizes -->
            <!-- Input addon -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Điền đầy đủ các thông tin bên dưới để cập nhật</h3>
                </div>
                <div class="box-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form asp-action="EditUser" asp-controller="AdminLTE" method="post">
                        <div class="input-group" style="display:none !important;">
                            <span class="input-group-addon" style="color:#001160;"><i class="fa fa-id-card"></i></span>
                            <input asp-for="Id" class="form-control" disabled />
                        </div>
                        <br>
                        <div class="input-group">
                            <span class="input-group-addon" style="color:#0094ff;">@@</span>
                            <input asp-for="UserName" class="form-control" disabled />
                        </div>
                        <br>
                        <div class="input-group">
                            <span class="input-group-addon" style="color:#0b7000;"><i class="fa fa-envelope-o"></i></span>
                            <input type="email" asp-for="Email" class="form-control" placeholder="email@example.com" />
                        </div>
                        <br>
                        <div class="input-group">
                            <span class="input-group-addon" style="color:#ff6a00;"><i class="fa fa-unlock"></i></span>
                            <input name="password" class="form-control" placeholder="Mật khẩu" />
                        </div>
                        <br>
                        <div class="input-group">
                            <span class="input-group-addon" style="color:#0b7000;"><i class="fa fa-gamepad"></i></span>
                            <input type="text" asp-for="InGame" required class="form-control" placeholder="Tên trong Game" />
                        </div>
                        <br>
                        <div class="input-group">
                            <span class="input-group-addon" style="color:#0b7000;"><i class="fa fa-user-circle-o"></i></span>
                            <input type="text" asp-for="FullName" class="form-control" placeholder="Tên hiển thị" />
                        </div>
                        <br>
                        <div class="input-group">
                            <span class="input-group-addon" style="color:#0b7000;"><i class="fa fa-server"></i></span>
                            <select type="text" asp-for="GameServerID">
                                <option selected value="1">Đại Mạc</option>
                                <option value="2">Thiên Đỉnh</option>
                                <option value="3">Núi Sương Bạc</option>
                                <option value="4">Biển Lục Nam</option>
                                <option value="5">Đồng Thủy Nguyệt</option>
                                <option value="6">Trường Hồng Môn</option>
                            </select>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-warning pull-right">Cập nhật</button>
                            <a asp-action="UserManager" asp-controller="AdminLTE" class="btn btn-default">Danh sách tài khoản</a>
                        </div>
                        <!-- /input-group -->
                    </form>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
