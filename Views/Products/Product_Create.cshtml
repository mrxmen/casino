
@model TblProducts

@{
    Layout = "_AdminLayoutLTE";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Create Product
        <small>allow to create a new product</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Products</a></li>
        <li class="active">Create Product</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- Form Element sizes -->
            <!-- Input addon -->
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Please fill out the form below</h3>
                </div>
                @if (TempData["message"] != null)
                {
                    <div class="alert alert-danger alert-dismissible" style="width:99%; margin:0 auto;">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i> Operation Failed!</h4>
                        @TempData["message"]
                    </div>
                }
                <div class="box-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form asp-action="Product_Create" asp-controller="Products" enctype="multipart/form-data" method="post">
                        <input type="hidden" asp-for="ProductID" value="0" />
                        <div class="form-group" style="overflow:hidden;">
                            <label asp-for="Category" class="col-sm-2 control-label">Category</label>
                            <div class="col-sm-10">
                                <select asp-for="Category" class="form-control">
                                    <option disabled selected value="">Select a Category</option>
                                    <option value="Watersports">Watersports</option>
                                    <option value="Soccer">Soccer</option>
                                    <option value="Chess">Chess</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group" style="overflow:hidden;">
                            <label asp-for="Name" class="col-sm-2 control-label">Product Name</label>
                            <div class="col-sm-10">
                                <input asp-for="Name" class="form-control" placeholder="Product Name">
                            </div>
                        </div>
                        <div class="form-group" style="overflow:hidden;">
                            <label asp-for="Price" class="col-sm-2 control-label">Price</label>
                            <div class="col-sm-10">
                                <input type="number" asp-for="Price" class="form-control" placeholder="0.00" />
                            </div>
                        </div>
                        <div class="form-group" style="overflow:hidden;">
                            <label asp-for="Description" class="col-sm-2 control-label">Description</label>
                            <div class="col-sm-10">
                                <textarea asp-for="Description" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="form-group" style="overflow:hidden;">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-info">Create</button>
                                <a asp-action="Products_List" asp-controller="Products" class="btn btn-default">Cancel</a>
                            </div>
                        </div>
                        <!-- /input-group -->
                    </form>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
